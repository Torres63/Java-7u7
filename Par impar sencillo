public class JavaApplication2 {

    public static void main(String[] args) {
   
        int numero;
        numero = 5;
               
        
        if(numero%2==0)
        {
            
            System.out.println("el numero es par");
        }
         else
                
                {
                  
                    System.out.println("el numero es impar");
                }
        
        
    }
      
    
    
}
